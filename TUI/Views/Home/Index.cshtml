<!-- Report Section -->
<section id="report">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Report</h2>
                <h3 class="section-subheading text-muted">Tell us places where action to be taken</h3>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-4">
            </div>
            <div class="col-md-4 report">
                <a href="@Url.Action("Planning")">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-university  fa-spin-hover fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <p class="text-muted">Tell us about the place where it needs attention of TUI, We people will give a face-lift to that place by joining our hands.</p>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
</section>

<section id="join" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Join</h2>
                <h3 class="section-subheading text-muted">Join our Hands to make a change</h3>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-4">
            </div>
            <div class="col-md-4 join">
                <a href="@Url.Action("Joining")">
